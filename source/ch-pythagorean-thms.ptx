  \coordinate (tmpRA) at ($(#2)+(\pgfmathresult+45:#4)$);
  \draw[#5] ($(#2)!(tmpRA)!(#1)$) -- (tmpRA) -- ($(#2)!(tmpRA)!(#3)$);
  }

  % square points
  % left square
